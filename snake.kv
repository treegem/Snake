#:kivy 1.10.1

<Score>
    size_hint: None, None
    size: 20, 20
    text: "0"
    color: 1, 1, 1, 0.4
    font_size: 50

<Sock>
    size_hint: None, None
    size: 20, 20
    canvas:
        Color:
            rgba: 1, 0.1, 0.1, 0.6
        Ellipse:
            pos: self.pos
            size: self.size

<Snake>:
    size_hint: None, None
    size: 20, 20
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeGame>:
    head: snake_
    sock: sock_
    score: score_

    height: 600
    width: 800
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1,1,1

    Snake:
        id: snake_
        x: root.center_x
        y: root.center_y

    Sock:
        id: sock_
        x: root.x
        y: root.y

    Score:
        id: score_
        right: root.right - 10
        top: root.top - 20
