#:kivy 1.10.1

<Sock>
    size_hint: None, None
    size: 20, 20
    canvas:
        Color:
            rgba: 1, 0.1, 0.1, 0.6
        Ellipse:
            pos: self.pos
            size: self.size

<Snake>:
    size_hint: None, None
    size: 20, 20
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeGame>:
    head: snake_
    sock: sock_

    height: 600
    width: 800
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1,1,1

    Snake:
        id: snake_
        x: root.center_x
        y: root.center_y

    Sock:
        id: sock_
        x: 400
        y: 300
